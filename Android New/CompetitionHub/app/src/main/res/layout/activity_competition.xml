<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompetitionActivity">

    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:maxHeight="400dp"
        android:id="@+id/textviewDetails"/>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_below="@+id/textviewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnParticipate"
            android:text="Participate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:background="#ff2323"
            android:id="@+id/btnCancelParticipation"
            android:text="Cancel Participation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_below="@+id/btnLayout"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/textviewFlag"/>
</RelativeLayout>